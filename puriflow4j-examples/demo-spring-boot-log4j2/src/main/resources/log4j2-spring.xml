<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Include MDC (traceId/token) and message only -->
            <PatternLayout pattern="%-5level [%X{traceId}] [%X{token}] %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>